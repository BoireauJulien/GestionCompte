{% extends "OCCoreBundle::layout.html.twig" %}

{% block meta %}
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
{% endblock meta %}

{% block scriptAndStyle %}
	<link rel="stylesheet" href="{{ asset('Style/compteRendu/catAnnee.css') }}">
	<script type="text/javascript" src="{{ asset('Script/compteRendu/catAnnee.js') }}"></script>
{% endblock %}

{% block infoPage %}
	Compte-rendu : Dépenses par année et par catégorie.
{% endblock %}

{% block body %}

	<div class="containerComptesBtns">
		{% for compte in comptes %}
			<div class="compteBtn">
				{{ compte.accountName }}
			</div>
		{% endfor %}
	</div>
	
	<div class="selectYearContainer">
		<div class="switchBtn lessBtn">
			-
		</div>
		<div class="selectYear">
			{{ currentYear }}
		</div>
		<div class="switchBtn moreBtn">
			+
		</div>
	</div>
	
	<div class="containerAccountCards">
	    {% for arrayTypeMCY in arraysTypeMCY %}
	    	<div class="containerCards">
		        {% for typeMCY in arrayTypeMCY %}
		        	<div class="carteMCY carteFill">
		        		<img class="imgBack" src="{{ asset('images/carteBackground.jpg') }}">
		        		<div class="rowMCY rowCategory">
		        			{{ typeMCY.categoryName }}
		        		</div>
		        		<div class="year rowHidden">
							{{ typeMCY.year }}
						</div>
		   				<div class="rowMCY rowMontant">
		   					{{ typeMCY.montant }}
		   				</div>
						<div class="rowMCY rowPercent">
							<div class="maxPercent">
								<div class="nbPercent">
									
								</div>
							</div>
						</div>
						<div class="rowMCY rowNbPercent">
							{{ typeMCY.percent|number_format(2, '.') }}%
						</div>
		        	</div>
		        {% endfor %}
		    </div>
	    {% endfor %}
	</div>
{% endblock %}